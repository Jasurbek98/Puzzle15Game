<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.AboutActivity"
    android:orientation="vertical"
    android:background="#C900BFA5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Game name: Puzzle"
            android:textSize="28sp"
            android:textColor="#FF5252"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="15dp">

        </Space>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last version: 1.01ist"
            android:textSize="28sp"
            android:textColor="#FF5252"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="15dp">

        </Space>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Performed by: Jasurbek Kurganbaev"
            android:textSize="28sp"
            android:textColor="#FF5252"></TextView>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="15dp">

        </Space>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="If you have request or any idea through game pleaes apply to this email: jasurbekkurganbaev@mail.ru"
            android:textSize="28sp"
            android:textColor="#FF5252"></TextView>
    </LinearLayout>

    <FrameLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="bottom">
        <Button
            android:layout_gravity="center"
            android:id="@+id/back_button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Back"
            android:textAllCaps="false"
            android:textSize="28sp"
            android:background="@drawable/menu_bt"
            android:textColor="#536DFE"></Button>
    </FrameLayout>

</FrameLayout>